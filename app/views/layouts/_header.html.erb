

<header class="navbar navbar-static-top navbar-inverse">
  <div class="container">
    <%= link_to "HackTUES", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Начало",   root_path %></li>
        <li><%= link_to "Участници", users_path %></li>
        <li><%= link_to "Отбори", teams_path %></li>
        <li><%= link_to "Блог",   articles_path %></li>

        <% Page.all.each do |p| %>
          <% if p.in_nav? %>
            <li><%= link_to p.title, "/#{p.slug}" %></li>
          <% end %>
        <% end %>

        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Акаунт <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Профил", current_user %></li>
              <li><%= link_to "Настройки", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Изход", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
          <% if current_user.admin? %>
            <li>
              <%= link_to new_page_path do %>
                <span class="glyphicon glyphicon-plus"></span>
              <% end %>
            </li>
          <% end %>
        <% else %>
          <li><%= link_to "Вход", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
