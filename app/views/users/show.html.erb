<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8 team_info">
    <% if @team %>
      <h4>Отбор:</h4>
      <%= link_to @team.name, "/teams/#{@team.id}" %>
    <% else %>
      <h4>Без отбор</h4>
      <% if current_user?(@user) %>
        <%= link_to "Създай", new_team_path %>
      <% end %>
    <% end %>
  </div>
</div>
