<% provide(:title, "Създаване на страница") %>

<h1>Създаване на страница</h1>


<%= form_for @page do |f| %>
  <%= f.label :title, "Заглавие" %>
  <%= f.text_field :title, class: 'form-control' %>
  <%= f.label :published, class: "checkbox inline" do %>
    <%= f.check_box :published %>
    Публикувана
  <% end %>
  <%= f.label :in_nav, class: "checkbox inline" do %>
    <%= f.check_box :in_nav %>
    Линк в навигацията
  <% end %>
  <%= f.cktext_area :content, :value => @page.content %>

<div class="row">
  <div class="col-md-2  col-md-offset-5">
    <%= f.submit "Създай", class: "btn btn-primary"%>
<% end %>
  </div>
</div>
