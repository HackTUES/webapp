<% provide(:title, @page.title) %>

<% if current_user && current_user.admin? %>
  <div class="page-controls">
    <%= link_to '<button class="btn btn-default">
      <span class="glyphicon glyphicon-pencil"></span>
    </button>'.html_safe, edit_page_path  %>

    <%= button_to @page, class: "btn btn-default", method: :delete,
                                  data: { confirm: "Сигурен?" } do %>
      <span class="glyphicon glyphicon-remove"></span>
    <% end %>
  </div>
<% end %>
<h1><%= @page.title %></h1>

<%= raw @page.content %>
